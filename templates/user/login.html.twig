{% extends "base.html.twig" %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="ui grid">
        <div class="centered six wide column">
            <div class="ui segment">
                <a href="{{ path('connect') }}" class="ui fluid button primary"><i class="icon github"></i> Connect with Github</a>
            </div>

            <div>
                OR if you are <i>lucky</i> enough to have a password
            </div>

            <div class="ui segment">
            <form class="ui form" action="{{ path('login') }}" method="post">
                <label for="username">Username:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" />

                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" />

                {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
                #}

                <button class="fluid ui button" type="submit">login</button>
            </form>
            </div>
        </div>
    </div>
{% endblock %}
